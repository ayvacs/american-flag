{

    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "rootDir": "./src",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    },

    "include": [
        "src/**/*.js",
        "src/**/*.ts"
    ]
    
}